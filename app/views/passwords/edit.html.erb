<div class="w-full">
  <img src="/icon.svg" alt="FemMed Logo" class="mx-auto aspect-square max-w-32">
  <h1 class="mt-6 text-center font-bold text-4xl">Update your password</h1>
  <h2 class="mt-3 text-center text-2xl">Make it a good one!</h2>

  <% if alert = flash[:alert] %>
    <p class="py-2 px-3 bg-red-50 text-red-500 font-medium rounded-lg inline-block mt-6 mx-auto" id="alert"><%= alert %></p>
  <% end %>

  <%= form_with url: password_path(params[:token]), method: :put, class: "mt-10 mx-auto max-w-md" do |form| %>
    <div class="my-5">
      <%= form.password_field :password, required: true, autocomplete: "new-password", placeholder: "Enter new password :3", maxlength: 72, class: "shadow-sm rounded-md border bg-rose-50 border-rose-300 px-3 py-2 w-full" %>
    </div>
    <div class="my-5">
      <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", placeholder: "And again to be sure hehe", maxlength: 72, class: "shadow-sm rounded-md border bg-rose-50 border-rose-300 px-3 py-2 w-full" %>
    </div>
    <div class="mt-8 flex justify-center">
      <%= form.submit "Save", class: "rounded-md px-6 py-3 bg-rose-400 hover:bg-rose-300 cursor-pointer font-medium" %>
    </div>
  <% end %>

  <div class="mt-16 flex justify-center items-center max-w-md mx-auto">
    <%= link_to "Back to login", new_session_path, class: "text-xl underline hover:no-underline" %>
  </div>
</div>

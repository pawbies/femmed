<% if notice %>
  <div data-controller="flash" class="fixed top-6 right-6 z-50 w-80 shadow-lg rounded-xl border border-emerald-200 bg-emerald-50 px-4 py-3">
    <div class="flex justify-between items-start">
      <div class="flex items-start gap-2">
        <div class="mt-0.5 shrink-0 w-5 h-5 rounded-full bg-emerald-400 flex items-center justify-center">
          <%= image_tag "icons/info.svg", class: "w-3 h-3" %>
        </div>
        <div>
          <h3 class="text-sm font-semibold text-emerald-800">For your info cutie pie!</h3>
          <p class="text-sm text-emerald-700 mt-0.5"><%= notice %></p>
        </div>
      </div>
      <button data-action="flash#close" class="no-js:hidden ml-2 shrink-0 text-emerald-400 hover:text-emerald-600 hover:cursor-pointer transition-colors">
        <%= image_tag "icons/x.svg", class: "w-4 h-4" %>
      </button>
      <%= link_to request.fullpath, class: "js:hidden ml-2 shrink-0 text-emerald-400 hover:text-emerald-600 hover:cursor-pointer transition-colors" do %>
        <%= image_tag "icons/x.svg", class: "w-4 h-4" %>
      <% end %>
    </div>
  </div>
<% end %>

<% if alert %>
  <div data-controller="flash" class="fixed top-6 right-6 z-50 w-80 shadow-lg rounded-xl border border-red-200 bg-red-50 px-4 py-3">
    <div class="flex justify-between items-start">
      <div class="flex items-start gap-2">
        <div class="mt-0.5 shrink-0 w-5 h-5 rounded-full bg-red-400 flex items-center justify-center">
          <%= image_tag "icons/alert.svg", class: "w-3 h-3" %>
        </div>
        <div>
          <h3 class="text-sm font-semibold text-red-800">Something went wrong!</h3>
          <p class="text-sm text-red-700 mt-0.5"><%= alert %></p>
        </div>
      </div>
      <button data-action="flash#close" class="ml-2 shrink-0 text-red-400 hover:text-red-600 hover:cursor-pointer transition-colors">
        <%= image_tag "icons/x.svg", class: "w-4 h-4" %>
      </button>
    </div>
  </div>
<% end %>

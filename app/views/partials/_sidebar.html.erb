<aside data-admin-sidebar-target="sidebar" class="hidden fixed inset-0 z-50">
<div
    data-admin-sidebar-target="backdrop"
    data-action="click->admin-sidebar#close"
    class="absolute inset-0 bg-black/20 opacity-0 transition-opacity duration-300 pointer-events-none"
  ></div>

  <div
    data-admin-sidebar-target="drawer"
    class="absolute left-0 top-0 h-full w-72 bg-white shadow-xl border-r border-rose-100 flex flex-col -translate-x-full transition-transform duration-300"
  >
    <div class="flex items-center justify-between px-6 py-5 border-b border-rose-100">
      <div>
        <p class="text-xs font-semibold text-rose-400 uppercase tracking-widest">Admin</p>
        <p class="text-lg font-bold text-gray-800 leading-tight">Control Panel</p>
      </div>
      <button data-action="click->admin-sidebar#close" class="text-gray-400 hover:text-rose-400 transition-colors p-1 rounded-lg hover:bg-rose-50">
        &#10005;
      </button>
    </div>

    <nav class="flex-1 overflow-y-auto px-4 py-6 space-y-6">
      <div>
        <p class="text-xs font-semibold text-gray-400 uppercase tracking-widest px-2 mb-2">Management</p>
        <div class="space-y-1">
          <%= link_to users_path, class: "flex items-center gap-3 px-3 py-2 rounded-lg text-sm text-gray-700 hover:bg-rose-50 hover:text-rose-500 transition-colors group" do %>
            <span class="text-gray-400 group-hover:text-rose-400">&#9679;</span> Users
          <% end %>
          <%= link_to "#", class: "flex items-center gap-3 px-3 py-2 rounded-lg text-sm text-gray-700 hover:bg-rose-50 hover:text-rose-500 transition-colors group" do %>
            <span class="text-gray-400 group-hover:text-rose-400">&#9679;</span> Prescriptions
          <% end %>
          <%= link_to "#", class: "flex items-center gap-3 px-3 py-2 rounded-lg text-sm text-gray-700 hover:bg-rose-50 hover:text-rose-500 transition-colors group" do %>
            <span class="text-gray-400 group-hover:text-rose-400">&#9679;</span> Dose Logs
          <% end %>
        </div>
      </div>

      <div>
        <p class="text-xs font-semibold text-gray-400 uppercase tracking-widest px-2 mb-2">Other</p>
        <div class="space-y-1">
          <%= link_to "#", class: "flex items-center gap-3 px-3 py-2 rounded-lg text-sm text-gray-700 hover:bg-rose-50 hover:text-rose-500 transition-colors group" do %>
            <span class="text-gray-400 group-hover:text-rose-400">&#9679;</span> Settings
          <% end %>
          <%= link_to "#", class: "flex items-center gap-3 px-3 py-2 rounded-lg text-sm text-gray-700 hover:bg-rose-50 hover:text-rose-500 transition-colors group" do %>
            <span class="text-gray-400 group-hover:text-rose-400">&#9679;</span> Activity Log
          <% end %>
        </div>
      </div>
    </nav>

    <div class="px-6 py-4 border-t border-rose-100">
      <p class="text-xs text-gray-400">Signed in as admin</p>
    </div>
  </div>
</aside>

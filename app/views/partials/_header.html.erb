<% unless hotwire_native_app? %>
  <header class="px-6 py-8 flex justify-between items-center">
    <h1 class="text-3xl font-semibold flex items-center">
      <img src="/icon.svg" alt="FemMed Logo" class="aspect-square h-24 mr-3">
      <%= link_to "FemMed", root_path %>
    </h1>

    <% if @admin_layout %>
      <button data-action="click->admin-sidebar#open" class="p-2 rounded-lg border border-rose-200 hover:bg-rose-50 text-rose-400 transition-colors text-sm">
        &#9776; Admin
      </button>
    <% end %>

    <% if authenticated? %>
      <div class="relative flex items-center" data-controller="profile">
        <%= image_tag Current.user.profile_picture, data: { action: "click->profile#toggle" }, alt: "Profile picture", class: "hover:cursor-pointer rounded-full border border-black aspect-square h-14" %>

        <div data-profile-target="popup" class="hidden absolute top-16 right-0 py-2 px-4 rounded-md border border-rose-300 bg-rose-100">
          <%= link_to "Profile", Current.user, class: "text-lg font-semibold" %>
          <%= link_to "Settings", settings_path, class: "text-lg font-semibold" %>
          <%= button_to "Log out", session_path, method: :delete, class: "hover:cursor-pointer text-lg text-red-500 font-semibold" %>
        </div>

        <div class="js:hidden border-l ml-1 pl-1 flex flex-col items-left">
          <%= link_to "Profile", Current.user, class: "text-lg font-semibold" %>
          <%= link_to "Settings", settings_path, class: "text-lg font-semibold" %>
          <%= button_to "Log out", session_path, method: :delete, class: "hover:cursor-pointer text-lg text-red-500 font-semibold" %>
        </div>
      </div>
    <% end %>
  </header>
<% end %>

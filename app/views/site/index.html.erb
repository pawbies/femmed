<% if @assistent_intro %>
<div class="hidden" data-controller="assistent">
  <img src="/icon.svg" alt="FemMed Logo" class="fixed w-1/2 xl:w-1/3 bottom-0 right-0">
  <div class="bg-rose-300 rounded-md px-4 py-6 absolute top-1/2 left-1/2 transform -translate-x-2/3 -translate-y-1/2">
  <p class="text-center">
    Welcome aboard femboy <%= Current.user.username %>!<br>
    I'm medicine kisser, the guarding of this site.<br>
    I don't condone any illegal behaviour! Only use drugs if they are prescibed by a doctor.<br>
    <br>

    Travel safe my friend.
  </p>

  <%= button_to "See you later medicine kisser!", assistent_talks_path, params: { talk: "introduction" }, class: "block mx-auto hover:cursor-pointer mt-3 px-3 py-2 bg-green-300 rounded-md" %>
  </div>
</div>
<% end %>

<div class="w-full">
  <h1 class="font-bold text-4xl">Welcome back <%= Current.user.username %></h1>

  <section class="my-12">
    <h3 class="text-3xl">Search</h3>

    <%= form_with url: root_path, class: "mt-4 flex", method: :get do |form| %>
      <%= form.text_field :query, required: true, placeholder: "Search for anything your heart desires ^w^", class: "shadow-sm rounded-md border bg-rose-50 border-rose-300 px-3 py-2 w-full mr-2" %>
      <%= form.submit "Yippie", class: "rounded-md px-6 py-3 bg-rose-400 hover:bg-rose-300 cursor-pointer font-medium" %>
    <% end %>

  </section>

  <section class="mb-6 w-full">
    <h3 class="text-3xl">My medications</h3>

    <div class="mt-4 grid grid-cols-2 md:grid-cols-4 xl:grid-cols-5 gap-3">
      <% 12.times do %>
        <%= render "medication_versions/card" %>
      <% end %>
    </div>
  </section>
</div>

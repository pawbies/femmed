<div class="bg-white border border-rose-200 rounded-2xl shadow-sm hover:shadow-md transition-shadow duration-200 flex flex-col items-center overflow-hidden group">
  <div class="w-full bg-rose-50 flex items-center justify-center p-4">
    <%= image_tag medication.image.presence || "/icon.svg", alt: "Medication cover", class: "w-28 h-28 object-contain" %>
  </div>
  <div class="w-full px-4 py-3 flex flex-col items-center gap-3">
    <h5 class="text-center font-semibold text-gray-800"><%= medication.name %></h5>
    <%= link_to "View medication", root_path, class: "w-full text-center text-sm font-medium bg-rose-400 hover:bg-rose-300 text-white rounded-lg px-4 py-2 transition-colors duration-150" %>
  </div>
</div>
